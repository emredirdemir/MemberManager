@model MemberManagement.entity.User
@{
    ViewData["Title"] = "Register";
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<style>
    .note {
        text-align: center;
        height: 80px;
        background: -webkit-linear-gradient(left, #0072ff, #8811c5);
        color: #fff;
        font-weight: bold;
        line-height: 80px;
    }

    .form-content {
        padding: 5%;
        border: 1px solid #ced4da;
        margin-bottom: 2%;
    }

    .form-control {
        border-radius: 1.5rem;
    }

    .btnSubmit {
        border: none;
        border-radius: 1.5rem;
        padding: 1%;
        width: 20%;
        cursor: pointer;
        background: #0062cc;
        color: #fff;
    }
</style>
<div class="container register-form">
    <div class="form">
        <div class="note">
            <p>Kayıt Ol</p>
        </div>
        <form asp-action="Register">
        <div class="form-content">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="UserName" id="password" type="text" class="form-control" placeholder="Kullanıcı Adı" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Parola" />
                    </div>
                </div>
            </div>
            <input type="submit" class="btnSubmit" value="Kayıt Ol"/>
        </div>
        </form>
    </div>
</div>